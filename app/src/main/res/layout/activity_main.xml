<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/goButon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/Status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/console"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="bottom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/goButon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/Status"
        android:layout_toRightOf="@+id/textView"
        android:gravity="center_vertical|center|center_horizontal"
        android:text="FSM"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/uploadProgress"
        android:layout_toStartOf="@+id/uploadProgress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Status:"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/Status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|center_horizontal" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadProgress"
        android:layout_below="@+id/goButon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:indeterminate="@bool/abc_action_bar_embed_tabs_pre_jb"
        android:max="100"
        android:progress="0" />

</RelativeLayout>
